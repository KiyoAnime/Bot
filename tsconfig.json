{
    "compilerOptions": {
        "strict": true,
        "lib": ["ES2020"],
        "outDir": "build",
        "target": "ES2020",
        "module": "NodeNext",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "exclude": ["node_modules"]
}